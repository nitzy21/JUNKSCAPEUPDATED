<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/achi"
    tools:context=".Achievement2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banana1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/can2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/cigar3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/goodlock" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chips4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/egg5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/fish6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/goodlock" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tire7"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/paper8"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/milk9"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/goodlock" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leaf10"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/plastic11"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/teabag12"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/goodlock" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wire13"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/tissue14"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/goodlock" />

                <ImageView
                    android:id="@+id/styro15"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/goodlock" />


            </LinearLayout>

        <ImageView
            android:id="@+id/backkk"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:src="@drawable/backkk"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>


        </LinearLayout>


    <RelativeLayout
        android:id="@+id/layoutDesc"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/infobanana" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="23dp"
            android:clickable="true"
            android:src="@drawable/exiticon" />


    </RelativeLayout>


</RelativeLayout>
