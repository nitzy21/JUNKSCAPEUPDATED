<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bgCityGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/city"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/domdom">

        <FrameLayout
            android:id="@+id/gameFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/domdom">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gameFrame2"
                    android:layout_width="match_parent"
                    android:layout_height="820dp"
                    android:src="@drawable/life22"
                    android:visibility="invisible" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gameFrame1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/life11"
                    android:visibility="invisible" />

            </FrameLayout>

            <ImageView
                android:id="@+id/ivFish"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/fish"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivLeaf"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/leaf2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivCan"
                android:layout_width="27dp"
                android:layout_height="57dp"
                android:src="@drawable/can"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivPaper"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/paper"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivChips"
                android:layout_width="43dp"
                android:layout_height="53dp"
                android:src="@drawable/chips2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivBanana"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/bbb"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivMilk"
                android:layout_width="37dp"
                android:layout_height="65dp"
                android:src="@drawable/milkkk"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivTire"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/tire2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivTissue"
                android:layout_width="38dp"
                android:layout_height="58dp"
                android:src="@drawable/tissue"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivPlastic"
                android:layout_width="42dp"
                android:layout_height="62dp"
                android:src="@drawable/plastic"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/ivCork"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:src="@drawable/karton"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivStyro"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:src="@drawable/styro"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/plusPoints"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/plusfive"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/black"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bombaf"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/plusLife"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heartgifff"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/trash"
                android:layout_width="105dp"
                android:layout_height="108dp"
                android:layout_gravity="bottom|center_vertical"
                android:src="@drawable/rightbio"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/lifeTwoGif"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="748dp"
                android:src="@drawable/lifetwo"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/lifeThreeGif"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="748dp"
                android:src="@drawable/lifethree"
                android:visibility="invisible" />

        </FrameLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picPause"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:onClick="pausePushed"
                android:visibility="invisible"
                app:srcCompat="@drawable/pausebitch"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/scoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/heart5"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/heart4"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/heartearth2" />

            <ImageView
                android:id="@+id/heart4"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_toStartOf="@+id/heart3"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/heartearth2" />

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/heartearth2" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/instructionsFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/slideViewPager"
                android:layout_width="358dp"
                android:layout_height="530dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="59dp"
                android:foregroundGravity="center_horizontal">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="56dp"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="313dp"
                android:layout_height="70dp"
                android:layout_above="@+id/dotsLayout"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/donee"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/arrow"
                android:layout_width="112dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="86dp"
                android:foregroundGravity="bottom"
                android:src="@drawable/arrow2"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chooserLayout"
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/picChoose"
                android:layout_width="295dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="159dp"
                android:src="@drawable/chooser"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/picBio"
                android:layout_width="152dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="55dp"
                android:clickable="true"
                android:src="@drawable/rightbio" />

            <ImageView
                android:id="@+id/picNonBio"
                android:layout_width="152dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/picBio"
                android:layout_marginEnd="51dp"
                android:clickable="true"
                android:src="@drawable/leftnonb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifJunk"
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/junk"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/over"
                android:layout_width="430dp"
                android:layout_height="331dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:foregroundGravity="top"
                android:src="@drawable/gameover2"
                android:visibility="gone" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifKeyboard"
                android:layout_width="299dp"
                android:layout_height="318dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="87dp"
                android:src="@drawable/run"
                android:visibility="visible" />

            <TextView
                android:id="@+id/highScoreLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="388dp"
                android:text="BEST:"
                android:textSize="27sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="97dp"
                android:layout_marginTop="135dp"
                android:gravity="center_horizontal"
                android:text="BEST:"
                android:textColor="#94d7e1"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="440dp"
                android:gravity="center_horizontal"
                android:text="Score: "
                android:textSize="24sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/picRetry"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="190dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/retry" />

            <ImageView
                android:id="@+id/picExit"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="111dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/exit" />

            <ImageView
                android:id="@+id/picStart"
                android:layout_width="117dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="365dp"
                android:clickable="true"
                android:src="@drawable/startnew" />

            <ImageView
                android:id="@+id/exittt"
                android:layout_width="93dp"
                android:layout_height="37dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="265dp"
                android:layout_marginEnd="44dp"
                app:srcCompat="@drawable/exitttt" />

            <ImageView
                android:id="@+id/picAchievements2"
                android:layout_width="323dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="86dp"
                android:clickable="true"
                android:src="@drawable/achievements"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/picAbout2"
                android:layout_width="205dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="147dp"
                android:clickable="true"
                android:src="@drawable/aboutuss"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/picAbout"
                android:layout_width="59dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="63dp"
                android:layout_marginStart="25dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/settt" />

            <ImageView
                android:id="@+id/picAchievements"
                android:layout_width="67dp"
                android:layout_height="56dp"
                android:layout_alignEnd="@+id/btnSettings"
                android:layout_alignParentTop="true"
                android:layout_marginTop="105dp"
                app:srcCompat="@drawable/trophy" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="77dp"
                android:layout_height="58dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/gifJunk"
                android:layout_marginEnd="16dp"
                android:src="@drawable/settt"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/SettingsLayout"
                android:layout_width="296dp"
                android:layout_height="515dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/settingsbg"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btnMute"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="130dp"
                        android:src="@drawable/musicon" />

                    <ImageView
                        android:id="@+id/btnVib"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/vibon" />

                    <ImageView
                        android:id="@+id/credits"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/creditss" />

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/backkk" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/creditsLayout"
            android:layout_width="380dp"
            android:layout_height="584dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/abtus"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/exitCredits"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/eks" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/pauseConfirmationLayout"
            android:layout_width="309dp"
            android:layout_height="206dp"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/gamepause"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center">

                <ImageView
                    android:id="@+id/btnExit"
                    android:layout_width="70dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:src="@drawable/exiticon2" />

                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:src="@drawable/playbitch" />

                <ImageView
                    android:id="@+id/btnRestart"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:src="@drawable/retrybitch" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exitConfirmLayout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/quitgame"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/nobitch" />

                <ImageView
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/yesbitch" />


            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>

</LinearLayout>